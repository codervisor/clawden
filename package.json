{
  "name": "clawden-workspace",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "cargo build --workspace && pnpm --filter '@clawden/*' run build",
    "build:rust": "cargo build --workspace",
    "build:rust:release": "cargo build --workspace --release",
    "build:dashboard": "pnpm --filter @clawden/dashboard build",
    "build:sdk": "pnpm --filter @clawden/sdk build",
    "dev": "concurrently -n server,dashboard -c blue,green \"cargo run -p clawden-server\" \"pnpm --filter @clawden/dashboard dev\"",
    "dev:dashboard": "pnpm --filter @clawden/dashboard dev",
    "dev:server": "cargo run -p clawden-server",
    "test": "cargo test --workspace && pnpm --filter '@clawden/*' run test",
    "test:rust": "cargo test --workspace",
    "test:dashboard": "pnpm --filter @clawden/dashboard test",
    "test:sdk": "pnpm --filter @clawden/sdk test",
    "check": "cargo check --workspace",
    "clippy": "cargo clippy --workspace --all-targets -- -D warnings",
    "fmt": "cargo fmt --all",
    "fmt:check": "cargo fmt --all -- --check",
    "clean": "cargo clean && pnpm --filter '@clawden/*' run --if-present clean",
    "cli": "cargo run -p clawden-cli --",
    "publish:platforms": "tsx scripts/publish-platform-packages.ts",
    "publish:main": "tsx scripts/publish-main-packages.ts",
    "prepare-publish": "tsx scripts/prepare-publish.ts",
    "restore-packages": "tsx scripts/restore-packages.ts",
    "sync-versions": "tsx scripts/sync-versions.ts"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "tsx": "^4.8.1"
  }
}
